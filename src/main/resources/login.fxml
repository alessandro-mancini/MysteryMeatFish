<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="391.0" prefWidth="614.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">

    <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <fx:include source="header.fxml" />

    <Label text="Accedi">
         <VBox.margin>
            <Insets top="150.0" />
         </VBox.margin>
         <font>
            <Font name="Calibri Bold" size="44.0" />
         </font></Label>
    <Label styleClass="text-info" text="Accedi al tuo Account MysteryMeatFish">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font></Label>


    <TextField fx:id="emailField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" promptText="Email">
         <VBox.margin>
            <Insets bottom="30.0" top="50.0" />
         </VBox.margin>
         <font>
            <Font name="Calibri Italic" size="16.0" />
         </font></TextField>
    <PasswordField fx:id="passwordField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" promptText="Password">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <font>
            <Font name="Calibri Italic" size="16.0" />
         </font></PasswordField>
    <Button alignment="CENTER" onAction="#handleLogin" styleClass="btn-primary" text="Accedi">
         <padding>
            <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
         </padding>
         <font>
            <Font name="Calibri Bold" size="16.0" />
         </font></Button>
    <Hyperlink onAction="#goToRegister" text="Registrati">
         <font>
            <Font name="Calibri Bold Italic" size="12.0" />
         </font></Hyperlink>
    </VBox>
</AnchorPane>
